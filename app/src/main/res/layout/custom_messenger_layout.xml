<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/message_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image_user"
        app:riv_oval="true" />


    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/receiver_messenger_layout"
        android:padding="10dp"
        android:text="Receiver messages"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold">

    </TextView>

    <ImageView
        android:id="@+id/message_sender_image_view"
        android:layout_width="@dimen/_135sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"

        android:layout_marginTop="13dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/message_receiver_image_view"
        android:layout_width="@dimen/_135sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"

        android:layout_marginTop="13dp"
        android:layout_marginEnd="5dp"

        android:scaleType="centerCrop" />
    <ImageView
        android:id="@+id/message_sender_file_view"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_75sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"

        android:layout_marginTop="13dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/message_receiver_file_view"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_75sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"

        android:layout_marginTop="13dp"
        android:layout_marginEnd="5dp"

        android:scaleType="centerCrop" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sender_message_image"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/receiver_message_image"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="@+id/receiver_message_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/sender_messenger_layout"
        android:padding="10dp"
        android:textColor="@color/primary_text"
        android:text="Send messenger"
        android:textSize="15sp"
        android:textStyle="bold">
    </TextView>
</RelativeLayout>